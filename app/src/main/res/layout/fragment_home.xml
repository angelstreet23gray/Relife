                <ImageButton
                    android:id="@+id/ibt_self"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/bg_border"
                    android:padding="3dp"
                    android:src="@drawable/hungry1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.25"
                    android:onClick="@{()->homeFragmentModel.onEnterUserInfo()}"
                    android:scaleType="centerInside"
                    />
                <ProgressBar
                    android:id="@+id/homeLifePb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="210dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="74dp"
                    android:layout_weight="12"
                    android:max="100"
                    android:progress="@{homeFragmentModel.life,default=50}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@{homeFragmentModel.account,default=User01}"
                    android:textColor="@color/circle_menu_center_button_color_normal"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/homeLifePb"
                    app:layout_constraintHorizontal_bias="0.20"
                    app:layout_constraintLeft_toRightOf="@+id/ibt_self"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.8" />
            </android.support.constraint.ConstraintLayout>

            <ImageButton
