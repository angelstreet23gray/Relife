<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/sport_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:fadingEdge="none"
            android:background="#00000000">

            <android.support.constraint.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">


                <ImageButton
                    android:id="@+id/bt_left"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/bt_datepicker"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    android:src="@drawable/play_button_left"
                    android:background="#00000000"
                    android:scaleType="fitXY"/>

                <Button
                    android:id="@+id/bt_datepicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintHorizontal_bias="0.48"
                    android:text="今天"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:background="#00000000"
                    android:paddingBottom="10dp"
                    />

                <ImageButton
                    android:id="@+id/bt_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/bt_datepicker"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.8"
                    android:src="@drawable/play_button_right"
                    android:background="#00000000"
                    android:scaleType="fitXY"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:id="@+id/scroll_bottom"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cons_bottom"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/sport_cons_circle"
                    android:layout_width="170dp"
                    android:layout_height="176dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/sport_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.1">

                    <ImageView
                        android:id="@+id/iv_champion"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/champion"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/v_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#000000"
                        app:layout_constraintTop_toBottomOf="@+id/iv_champion" />

                    <TextView
                        android:id="@+id/tv_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="消耗卡路里"
                        android:textColor="#000"
                        android:textSize="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_line" />

                    <TextView
                        android:id="@+id/tv_sport_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="600 cal"
                        android:textColor="#000"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_cal" />


                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_walk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/sport_cons_circle"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.45"
                    app:layout_constraintVertical_bias="0.2"
                    android:text="步行"
                    android:textSize="25dp"
                    android:textColor="#000"
                    />

                <TextView
                    android:id="@+id/tv_walk_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_walk"
                    app:layout_constraintLeft_toRightOf="@+id/sport_cons_circle"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.65"
                    android:text="4438步"
                    android:textSize="25dp"
                    android:textColor="#000"/>

                <ImageButton
                    android:id="@+id/bt_daily"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sport_cons_circle"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_cirle_normal"
                    android:src="@drawable/daily"
                    android:scaleType="fitXY"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sport_recyler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/bt_daily"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="20dp">
                </android.support.v7.widget.RecyclerView>

                <ImageButton
                    android:id="@+id/bt_sport_plus"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toBottomOf="@+id/sport_recyler_view"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_cirle_normal"
                    android:src="@drawable/sleep_plus02"
                    android:scaleType="fitXY"
                    app:layout_constraintVertical_bias="0.95"
                    />

            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </LinearLayout>


