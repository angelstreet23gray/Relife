<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#c0c0c0">

    <TextView
        android:id="@+id/group_tv_oil"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:textSize="15sp"
        android:textColor="#000000"
        android:text="脂肪"/>
    <TextView
        android:id="@+id/group_tv_rice"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@+id/group_tv_oil"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:text="碳水"/>

    <TextView
        android:id="@+id/group_tv_egg"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@+id/group_tv_rice"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:text="蛋白質"/>

    <TextView
        android:id="@+id/group_tv_rda"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@+id/group_tv_egg"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:text="RDA"/>

</android.support.constraint.ConstraintLayout>