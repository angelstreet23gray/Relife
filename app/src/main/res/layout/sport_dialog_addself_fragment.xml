<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fffacd">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#000"
        android:text="新增運動"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/tv_sport_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="運動名稱: "
        android:textColor="#000"
        app:layout_constraintHorizontal_bias="0.1"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/ed_sport_type"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@+id/tv_sport_type"
        app:layout_constraintLeft_toRightOf="@+id/tv_sport_type"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edit_perfect"/>

    <TextView
        android:id="@+id/tv_sport_loss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_sport_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:text="運動消耗: "
        android:textColor="#000"
        app:layout_constraintHorizontal_bias="0.1"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/ed_sport_loss"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/tv_sport_loss"
        app:layout_constraintLeft_toRightOf="@+id/tv_sport_loss"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edit_perfect" />

    <TextView
        android:id="@+id/tv_sportLoss_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ed_sport_loss"
        app:layout_constraintLeft_toRightOf="@+id/ed_sport_loss"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        android:text="小時/大卡"
        android:textColor="#000"
        />

    <Button
        android:id="@+id/bt_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_sport_loss"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="確認"
        android:textSize="25sp"
        android:background="@drawable/cardview_color_change"/>

    <View
        android:id="@+id/v_line"
        app:layout_constraintTop_toBottomOf="@+id/bt_ok"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#00000000"/>

</android.support.constraint.ConstraintLayout>