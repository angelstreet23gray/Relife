<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/iv_eat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.25"
        android:background="@drawable/button_cercle"
        android:src="@drawable/meal"
        android:scaleType="fitXY"/>
    
    <TextView
        android:id="@+id/tv_eat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_eat"
        app:layout_constraintTop_toTopOf="@+id/iv_eat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        android:layout_marginTop="10dp"
        android:text="早餐"
        android:textSize="20sp"/>
    
    <LinearLayout
        android:id="@+id/linear_cal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_eat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_perfect"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tv_total_cal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="總熱量"
            android:gravity="center"
            android:textColor="#000"/>
        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <TextView
            android:id="@+id/tv_total_cal_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123大卡"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#000"/>
    </LinearLayout>

    <EditText
        android:id="@+id/ed_search"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/linear_cal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_perfect"
        app:layout_constraintHorizontal_bias="0.35"/>

    <ImageButton
        android:id="@+id/iv_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@+id/ed_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ed_search"
        app:layout_constraintHorizontal_bias="0.2"
        android:src="@drawable/search"
        android:scaleType="fitXY"
        android:background="#00000000"/>
    
</android.support.constraint.ConstraintLayout>