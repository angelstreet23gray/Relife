<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- 定义当button 处于pressed 状态时的形态。-->
        <shape
            android:shape="rectangle">
            <solid android:color="#d3d3d3"></solid>
            <stroke android:width="4dp" android:color="#ffdab9" /><!--边框宽度和颜色-->
            <corners android:radius="10dp" /><!--圆弧半径-->
            <padding android:left="10dp" android:top="10dp"
                android:bottom="10dp" android:right="10dp" />
        </shape>
    </item>
    <item>
        <!-- 定义当button获得focus时的形态-->
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#7F87cefa"/>
            <stroke android:width="4dp" android:color="#ffdab9" />
            <corners android:radius="10dp"/>
            <padding android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>