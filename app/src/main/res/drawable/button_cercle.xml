<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
    <shape
        android:shape="oval">
        <solid android:color="#deb887"></solid>
        <corners android:radius="360dp" />
        <padding
            android:bottom="10dp"
            android:top="10dp"
            android:left="10dp"
            android:right="10dp">
        </padding>
    </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid android:color="#fafad2"></solid>
            <corners android:radius="360dp" />
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:left="10dp"
                android:right="10dp">
            </padding>
        </shape>
    </item>
</selector>

